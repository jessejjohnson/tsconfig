{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "noUnusedLocals": true,
      "noFallthroughCasesInSwitch": true,
      "isolatedModules": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "lib": [
        "ESNext"
      ]
    }
  }